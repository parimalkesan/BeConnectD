<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" 
    android:padding="8dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/msg_timestamp"
        android:text="29/03/2020 05:59pm"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"/>

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:id="@+id/rel_layout_right"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/msg_timestamp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prof_image_message"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_format_right"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        android:id="@+id/user_message"
        android:text="hello"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:padding="8dp"/>

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/seen_status_tv"
         android:text="seen"
         android:layout_below="@id/user_message"
         android:layout_alignParentRight="true"
         android:layout_alignParentEnd="true"/>

</RelativeLayout>
</RelativeLayout>